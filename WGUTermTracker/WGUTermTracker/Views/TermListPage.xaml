<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:WGUTermTracker.Models"
             xmlns:viewModels="clr-namespace:WGUTermTracker.ViewModels"
             x:Class="WGUTermTracker.Views.TermListPage"
             Title="Terms"
             x:DataType="viewModels:TermListViewModel">

    <Grid RowDefinitions="*,Auto,Auto">
        <CollectionView
                  VerticalOptions="Fill"
                  ItemsSource="{Binding Terms}"
                  SelectionMode="Single"
                  SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Term">
                    <Grid RowDefinitions="Auto,Auto,Auto"
                          ColumnDefinitions="*, Auto" Padding="20">

                        <Label Grid.Row="0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Termname}" FontAttributes="Bold" FontSize="24"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="1">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Start Date: " FontAttributes="Bold"/>
                                    <Span Text="{Binding StartDate, StringFormat='{0:d}'}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Grid.Row="2">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="End Date: " FontAttributes="Bold"/>
                                    <Span Text="{Binding EndDate, StringFormat='{0:d}'}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1" Text="Generate Class Report"
                Command="{Binding GenerateReportCommand}"
                Margin="20"/>
        <Button Grid.Row="2" Text="Add New Term"
                Command="{Binding AddCommand}"
                Margin="20"/>
    </Grid>

</ContentPage>