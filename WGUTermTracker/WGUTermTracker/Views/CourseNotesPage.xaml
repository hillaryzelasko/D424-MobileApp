<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:WGUTermTracker.ViewModels"
             x:Class="WGUTermTracker.Views.CourseNotesPage"
             x:DataType="viewModels:CourseDetailViewModel"
             Title="{Binding Course.CourseName, StringFormat='Notes: {0}'}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Notes" FontAttributes="Bold" FontSize="18" />
            <Editor
                Text="{Binding CourseNotes}"
                AutoSize="TextChanges"
                Placeholder="Add optional course notes" />
            <HorizontalStackLayout Spacing="12">
                <Button
                    Text="Save Notes"
                    Command="{Binding SaveNotesCommand}"
                    HorizontalOptions="FillAndExpand" />
                <Button
                    Text="Share Notes"
                    Command="{Binding ShareNotesCommand}"
                    HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
