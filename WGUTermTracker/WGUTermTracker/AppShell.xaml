<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WGUTermTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WGUTermTracker.Views"
    xmlns:local="clr-namespace:WGUTermTracker"
    Title="WGUTermTracker">

    <TabBar>
        <ShellContent
            Title="Terms"
            ContentTemplate="{DataTemplate views:TermListPage}"
            Icon="{OnPlatform 'wgulogo.png', iOS='note.png', MacCatalyst='note.png'}" />
        <ShellContent
            Title="Course Notes"
            ContentTemplate="{DataTemplate views:CourseNotesListPage}"
            Icon="{OnPlatform 'wgulogo.png', iOS='note.png', MacCatalyst='note.png'}" />
    </TabBar>

</Shell>
